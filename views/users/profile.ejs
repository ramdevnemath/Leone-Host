<body>
    <div class="">
        <div class="hero-wrap hero-bread" class="" style="background-image: url('user/img/banner/banner-bg.jpg');">
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-center">
                    <div style="height: 200px;" class="col-md-9 ftco-animate text-center">
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- User Profile -->
    <section class="user-profile">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <div class="user-profile-sidebar">
                        <div class="user-profile-avatar">
                            <img src="user/img/r8.jpg" alt="User Avatar">
                        </div>
                        <div class="user-profile-info">
                            <h3 class="user-profile-name">
                                <%= name %>
                            </h3>
                        </div>
                        <div class="user-profile-buttons">
                            <button class="btn btn-primary active" data-section="profile-details-section">Profile
                                Details</button>
                            <button class="btn btn-primary" data-section="address-section">Address</button>
                            <button class="btn btn-primary" data-section="my-orders-section">My Orders</button>
                            <!-- Add additional buttons as needed -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-7">
                    <div id="profile-details-section" class="user-profile-content">
                        <h3 class="user-profile-section-title">Profile Information</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Full Name</label>
                                    <input type="text" id="name" class="form-control" value="<%= name %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" id="email" class="form-control" value="<%= email %>">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <textarea id="address" class="form-control">123 Main St, New York, USA</textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </div>
                    <div id="address-section" class="user-profile-content">
                        <h3 class="user-profile-section-title">Address</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="address">Address</label>
                                    <textarea id="address" class="form-control">123 Main St, New York, USA</textarea>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-primary">Save Address</button>
                            </div>
                        </div>
                    </div>
                    <div id="my-orders-section" class="user-profile-content">
                        <h3 class="user-profile-section-title">My Orders</h3>
                        <div class="container-fluid">
                            <div class="card">
                                <div class="card-body">
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>Order Number</th>
                                                <th>Order Date</th>
                                                <th>Name</th>
                                                <th>Address</th>
                                                <th>Pincode</th>
                                                <th>Mobile</th>
                                                <th>Total Amount</th>
                                                <th>Total Quantity</th>
                                                <th>Payment</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <% orders.forEach((element, index)=> { %>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= new Date(element.createdAt).toLocaleString() %>
                                                    </td>
                                                    <td>
                                                        <%= element.deliveryDetails.firstname + ' ' +
                                                            element.deliveryDetails.lastname %>
                                                    </td>
                                                    <td>
                                                        <%= element.deliveryDetails.streetaddress %>
                                                    </td>
                                                    <td>
                                                        <%= element.deliveryDetails.zip %>
                                                    </td>
                                                    <td>
                                                        <%= element.deliveryDetails.mobile %>
                                                    </td>
                                                    <td>$<%= element.totalAmount %>
                                                    </td>
                                                    <td>
                                                        <%= getTotalQuantity(element.products) %>
                                                    </td>
                                                    <td>
                                                        <%= element.paymentMethod %>
                                                    </td>
                                                    <td><a href="/viewOrderProducts/<%= element._id %>"
                                                            class="btn btn-outline-warning">View Details</a></td>
                                                </tr>
                                            </tbody>
                                            <% }) %>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br><br><br><br>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const buttons = document.querySelectorAll(".user-profile-buttons button");
            const sections = document.querySelectorAll(".user-profile-content");

            buttons.forEach(function (button) {
                button.addEventListener("click", function () {
                    const sectionId = this.getAttribute("data-section");

                    sections.forEach(function (section) {
                        section.style.display = "none";
                    });

                    document.getElementById(sectionId).style.display = "block";

                    buttons.forEach(function (btn) {
                        btn.classList.remove("active");
                    });

                    this.classList.add("active");
                });
            });
        });
    </script>